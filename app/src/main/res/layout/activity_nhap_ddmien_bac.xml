<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NhapDDActivity">

    <LinearLayout
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:id="@+id/lnHeader"
        android:layout_height="35dp">

        <TextView
            android:text="Soc"
            android:id="@+id/tvNguoiBan"
            android:textSize="20sp"
            android:background="@drawable/rectangle_bg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:layout_height="match_parent"/>

        <TextView
            android:text="10/4"
            android:id="@+id/tvDate"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:layout_height="match_parent"/>
        <Button
            android:text="Xem"
            android:id="@+id/tvInput"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#f9d48a"
            android:layout_height="match_parent"/>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/lnHeader"
        android:layout_width="match_parent"
        android:id="@+id/rvSoDa"
        tools:listitem="@layout/dau_duoi_item"
        android:layout_height="260dp"/>
    <View
        android:layout_below="@id/rvSoDa"
        android:id="@+id/divider"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <LinearLayout
        android:layout_below="@id/divider"
        android:layout_width="match_parent"
        android:orientation="horizontal"

        android:id="@+id/lnInputDD"
        android:layout_height="55dp">

        <EditText
            android:text="0"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:id="@+id/etSoCuoc"
            android:background="@drawable/etborder_unselected"
            android:layout_height="match_parent"/>
        <EditText
            android:text="0"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/etTienCuoc"
            android:background="@drawable/etborder_unselected"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_below="@+id/lnInputDD"
        android:layout_width="match_parent"
        android:weightSum="4"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatButton
                    android:background="@drawable/button"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="25sp"
                    android:id="@+id/btn1"
                    android:text="1"
                    android:layout_height="match_parent"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:background="@drawable/button"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="25sp"
                    android:text="2"
                    android:id="@+id/btn2"
                    android:layout_height="match_parent"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:background="@drawable/button"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="25sp"
                    android:text="3"
                    android:id="@+id/btn3"
                    android:layout_height="match_parent"
                    />
                <ImageButton
                    android:src="@drawable/input_delete_icon"
                    android:background="@drawable/button"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="25sp"
                    android:id="@+id/btnC"
                    android:layout_height="match_parent"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:weightSum="3"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_weight="2"
                android:orientation="vertical"
                android:background="#fff"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:weightSum="3"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatButton
                        android:background="@drawable/button"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:textSize="25sp"
                        android:text="4"
                        android:id="@+id/btn4"
                        android:layout_height="match_parent"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:background="@drawable/button"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:textSize="25sp"
                        android:text="5"
                        android:id="@+id/btn5"
                        android:layout_height="match_parent"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:background="@drawable/button"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:textSize="25sp"
                        android:text="6"
                        android:id="@+id/btn6"
                        android:layout_height="match_parent"
                        />

                </LinearLayout>
                <LinearLayout
                    android:weightSum="3"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatButton
                        android:background="@drawable/button"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:textSize="25sp"
                        android:text="7"
                        android:id="@+id/btn7"
                        android:layout_height="match_parent"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:background="@drawable/button"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:textSize="25sp"
                        android:text="8"
                        android:id="@+id/btn8"
                        android:layout_height="match_parent"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:background="@drawable/button"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:textSize="25sp"
                        android:text="9"
                        android:id="@+id/btn9"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatButton
                    android:background="@drawable/button"
                    android:layout_width="match_parent"
                    android:textSize="25sp"
                    android:text="OK"
                    android:id="@+id/btnOk"
                    android:layout_height="match_parent"
                    />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.appcompat.widget.AppCompatButton
                    android:background="@drawable/button"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="25sp"
                    android:text="."
                    android:id="@+id/btnDot"
                    android:layout_height="match_parent"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:background="@drawable/button"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="25sp"
                    android:text="0"
                    android:id="@+id/btnZero"
                    android:layout_height="match_parent"
                    />


                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <androidx.appcompat.widget.AppCompatButton
                        android:background="@drawable/button"
                        android:layout_width="match_parent"
                        android:textSize="25sp"
                        android:text="Enter"
                        android:id="@+id/btnEnter"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>