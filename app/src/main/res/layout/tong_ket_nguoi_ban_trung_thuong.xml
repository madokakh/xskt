<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/linear_no_trung_thuong_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvNoData"
            android:gravity="center"
            android:textSize="@dimen/medium_size"
            android:text="Hiện chưa có dữ liệu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="30dp"
        android:visibility="visible"
        android:id="@+id/ln_trung_thuong"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ln_an_ui"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="@dimen/medium_size"
                android:text="@string/an_ui"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="100dp"
                android:orientation="vertical"
                android:id="@+id/ln_data_an_ui"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_an_trung_dau_duoi"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="@dimen/medium_size"
                android:text="@string/dau_duoi"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="100dp"
                android:orientation="vertical"
                android:id="@+id/ln_data_dau_duoi"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ln_trung_da"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="@dimen/medium_size"
                android:text="@string/da"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="100dp"
                android:orientation="vertical"
                android:id="@+id/ln_data_da"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_trung_bao_lo"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="@dimen/medium_size"
                android:text="@string/bao_lo"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="100dp"
                android:orientation="vertical"
                android:id="@+id/ln_data_bao_lo"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>